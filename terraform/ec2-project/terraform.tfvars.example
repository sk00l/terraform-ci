# Example terraform.tfvars file for EC2 project
# Copy this file to terraform.tfvars and modify the values as needed

aws_region = "us-east-1"
environment = "dev"
key_pair_name = "sauravbhattarai-key"

# Optional: Override instance type
# instance_type = "t3.small"

# Optional: Override volume size
# volume_size = 16

# Optional: Specify VPC and subnet
# vpc_id = "vpc-12345678"
# subnet_id = "subnet-12345678"

# Additional tags
tags = {
  Owner       = "sauravbhattarai"
  Department  = "Engineering"
  CostCenter  = "CC001"
  Backup      = "true"
  Monitoring  = "true"
} 